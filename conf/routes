# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /robots.txt             controllers.Assets.at(path="/public", file="robots.txt")
GET     /sitemap.xml             controllers.Assets.at(path="/public", file="sitemap.xml")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /lt            controllers.HomeController.pagrindinisLT

GET    /toFaceBook    controllers.HomeController.toFaceBook

GET     /                 controllers.HomeController.germanVersion()

GET     /ru                 controllers.HomeController.russianVersion()

GET    /submitLT              controllers.HomeController.submitLT()

GET    /submitRU              controllers.HomeController.submitRU()

GET    /submitDE              controllers.HomeController.submitDE()

GET     /public/*file      controllers.Assets.at(path="/public", file)



#GET    /playdb         controllers.HomeController.connection()

#form page
GET    /actualpage              controllers.HomeController.testing()
#admin page
GET    /adminpage              controllers.HomeController.adminPage()

#form handling
POST    /submitFullForm              controllers.FullFormMagic.addBookingToDatabase()
#get massages,prices,lengths
GET    /getMassagesData              controllers.HomeController.getMassagesData()
